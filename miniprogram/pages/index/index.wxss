/* 在现有的样式后面添加 */
.history-section {
  margin-top: 30px;
  width: 100%;
  padding: 15px;
  background-color: #f9f9f9;
  border-radius: 8px;
}

.history-title {
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10px;
}

.history-list {
  max-height: 200px;
  overflow-y: auto;
}

.history-item {
  padding: 8px 0;
  border-bottom: 1px solid #eee;
  font-size: 14px;
  color: #666;
}

.history-item:last-child {
  border-bottom: none;
}