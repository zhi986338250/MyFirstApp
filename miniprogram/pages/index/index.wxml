<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <text class="title">欢迎使用我的小程序！</text>
  </view>
  
  <view class="content">
    <text class="subtitle">当前时间：{{currentTime}}</text>
    <button bindtap="clickButton">点击我</button>
    <text class="message">{{message}}</text>
    
    <!-- 显示点击历史 -->
    <view class="history-section" wx:if="{{clickHistory.length > 0}}">
      <text class="history-title">点击历史：</text>
      <view class="history-list">
        <view class="history-item" wx:for="{{clickHistory}}" wx:key="index">
          <text>{{item.time}} - {{item.message}}</text>
        </view>
      </view>
    </view>
  </view>
</view>